<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackers.matt.boxingthisbetterwork.MainActivity"
    android:background="@color/colorNeutral"
    android:id="@+id/mainLayout"
    android:orientation="vertical">

    <EditText
        android:id="@+id/countdownClock"
        android:layout_width="match_parent"
        android:text="3:00"
        android:gravity="center"
        android:layout_weight=".2"
        android:inputType="time"
        android:ems="10"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextTheme"

        />

    <LinearLayout
        android:id="@+id/timerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:onClick="start_btn_clicked"
            android:text="Start" />

        <Button
            android:id="@+id/Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.33"
            android:text="Pause" />

        <Button
            android:id="@+id/Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.33"
            android:text="Reset" />

    </LinearLayout>




</LinearLayout>
